<t:test expected="pass" features="selenium"
        xmlns:t="http://xproc.org/ns/testsuite/3.0">
  <t:info>
    <t:title>selenium-005</t:title>
    <t:revision-history>
      <t:revision>
        <t:date>2025-05-23</t:date>
